{
  "name": "js-tdd-course",
  "version": "1.0.0",
  "description": "My library of course JS with TDD in practice",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/**/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:watch": "npm test -- --watch",
    "test-bail": "npm test -- --bail",
    "test:coverage": "node_modules/.bin/nyc npm test"
  },
  "nyc": {
    "check-coverage": true,
    "functions": 80,
    "lines": 80,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "keywords": [
    "js",
    "tdd"
  ],
  "author": "Marcos Vinicius de Oliveira <contato@vmarcosp.com.br> (http://www.vmarcosp.com.br/)",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "husky": "^0.14.3",
    "mocha": "^4.0.1",
    "nyc": "^11.2.1"
  }
}